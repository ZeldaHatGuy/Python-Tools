{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "colored": {
            "()": "colorlog.ColoredFormatter",
            "format": "%(log_color)s%(asctime)s [%(levelname)s] [Module: %(module)s(Line: %(lineno)d), Function: %(funcName)s)]: %(message)s%(reset)s",
            "log_colors": {
                "DEBUG": "purple",
                "INFO": "blue",
                "WARNING": "yellow",
                "ERROR": "red",
                "CRITICAL": "bold_red",
                "SUCCESS": "bold_green"
            },
            "datefmt": "%Y-%m-%d-T%H:%M:%S%z"
        },
        "json": {
            "()": "myLogger.MyJSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "message": "message",
                "timestamp": "timestamp",
                "logger": "name",
                "module": "module",
                "function": "funcName",
                "line": "lineno",
                "thread_name": "threadName"
            }
        }
    },
    "handlers": {
        "stderr": {
            "class": "logging.StreamHandler",
            "formatter": "colored",
            "level": "WARNING",
            "stream": "ext://sys.stdout"
        },
        "stdout_info_debug": {
            "class": "logging.StreamHandler",
            "formatter": "colored",
            "level": "DEBUG",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "colored",
            "level": "DEBUG",
            "filename": "./my-app.log1",
            "maxBytes": 10000,
            "backupCount": 3
        },
        "queue_handler": {
            "class": "logging.handlers.QueueHandler",
            "handlers": [
                "stderr",
                "file"

            ],
            "respect_handler_level": true
        }
    },
    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": [
               "queue_handler"
            ]
        }
    }
}
